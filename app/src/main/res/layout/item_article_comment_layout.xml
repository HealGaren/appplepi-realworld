<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@color/white"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/commentWriterImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentWriterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickName"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/commentWriterImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque semper tincidunt porttitor. Ut iaculis sapien id ante suscipit gravida. Etiam dictum risus ut justo consectetur, at gravida nibh fringilla. Nulla eu sapien id lectus egestas imperdiet. Quisque quis facilisis augue. Etiam mollis massa sit amet lectus consectetur tristique"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentWriterImage" />


</androidx.constraintlayout.widget.ConstraintLayout>