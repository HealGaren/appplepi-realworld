<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.retrofit.view.signin.SignInActivity"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.signin.SignInActivity">

        <TextView
            android:id="@+id/signinTv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign in"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            />

        <EditText
            android:id="@+id/signinEmailEtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/signinTv1"
            android:layout_margin="30sp"
            />

        <EditText
            android:id="@+id/signinPasswordEtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/signinEmailEtv"
            android:layout_margin="30sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signinLoginBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="@id/signinPasswordEtv"
            app:layout_constraintEnd_toEndOf="@id/signinPasswordEtv"
            app:layout_constraintTop_toBottomOf="@id/signinPasswordEtv"
            android:layout_marginTop="15sp"
            />

        <TextView
            android:id="@+id/signinSignupTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Need an account?"
            android:textSize="15sp"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@id/signinLoginBtn"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>